<h3>Mini kalkulator</h3>
    <div class="row">
         <div class="col-sm">
             <div class="form-group mt-2">
            <label for="firstName">Pierwsza liczba</label>
            <input type="text" class="form-control" id="firstName" @bind-value="@first">
        </div>
        <div class="form-group mt-2">
            <label for="lastName">Pierwsza liczba</label>
            <input type="text" class="form-control" id="lastName" @bind-value="@second">
        </div>
        <button class="btn btn-primary mt-2" @onclick="Oblicz">Zapisz</button>
         </div>
         <div class="col-sm"></div>
         <div class="col-sm"></div>
         <hr class="mt-3"/>
         <h1>Wynik: @result</h1>
    </div>


    @code {

        [Parameter]
        public string OperationType { get; set; }

        int first;
        int second;
        int result;

        void Oblicz()
        {
                if (OperationType == "dodawanie")
                    result = first + second;
                else if (OperationType == "mno≈ºenie")
                    result = first * second;
                else
                    result = first - second;
        }
    }